<div class="mt-0">
  <h1 class="font-bold text-4xl text-blue-500 mt-0">Blog Posts</h1>

  <% if @posts.any? %>
    <ul>
      <% @posts.each do |post| %>
        <li class="mb-5">
          <h2 class="font-bold text-2xl"><%= post.title %></h2>
          <p class="text-gray-700"><%= post.content%></p> 
          <p class="text-sm text-gray-900">Posted on <%= post.created_at.strftime("%B %d, %Y") %></p>
          <% if post.user_id == current_user.id%>
           <%= link_to 'Edit', edit_post_path(post)%>
           <%= link_to 'Delete', post_path(post), method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
          <a href="<%= post_path(post) %>" class="text-blue-600 hover:underline">Read more</a>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p>No posts available.</p>
  <% end %>
</div>
